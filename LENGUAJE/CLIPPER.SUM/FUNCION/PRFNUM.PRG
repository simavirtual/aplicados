***********************************************************
FUNCTION STR0(NUMERO,TAMANHO)
IF TAMANHO=NIL
   TAMANHO=10     && EL VALOR POR DEFECTO ES 10 
ENDIF
TRABALHO=REPLICATE("9",TAMANHO-3)
TRABALHO=TRABALHO+".99"
FINAL=LTRIM(TRIM(TRANSFORM(NUMERO,TRABALHO)))
DO WHILE LEN(FINAL)<> TAMANHO
   FINAL="0"+FINAL
ENDDO
RETURN(FINAL)

******************************************************
FUNCTION STRSIMB(NUMERO,TAMANHO,SIMBOLO)
IF TAMANHO=NIL
   TAMANHO=10     && SI NO SE DEFINE SE ASUME 10
ENDIF
IF SIMBOLO=NIL
   SIMBOLO="*"    && ESTE CARACTER PUEDE SER MODIFICADO 
ENDIF
TRABALHO=REPLICATE("9",TAMANHO-3)
TRABALHO=TRABALHO+".99"
FINAL=LTRIM(TRIM(TRANSFORM(NUMERO,TRABALHO)))
DO WHILE LEN(FINAL)<> TAMANHO
   FINAL=SIMBOLO+FINAL
ENDDO
RETURN(FINAL)

