FUNCTION STRINT(VAL1)
RETURN LTRIM(STR(INT(VAL1)))

***********************************************************
FUNCTION STRDEC(VAR1)
LOCAL VAR2
VAR2=INT(VAR1)
VAR2=VAR1-VAR2
IF VAR2 <>0
   RETURN(SUBSTR(LTRIM( STR(VAR2,10,2) ),3) )
ELSE
   RETURN("")
ENDIF

